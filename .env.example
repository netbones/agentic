# Database
# For standard Postgres, use postgresql:// in DATABASE_URL.
# For Prisma Accelerate, use prisma:// in DATABASE_URL and keep DIRECT_URL as the direct Postgres connection.
DATABASE_URL="postgresql://postgres:password@localhost:5432/agentic?schema=public"
DIRECT_URL="postgresql://postgres:password@localhost:5432/agentic?schema=public"

# Auth.js (NextAuth)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="" # Generate a random secret here: https://generate-secret.vercel.app/32
AUTH_TRUST_HOST=true

# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Encryption for tokens at rest (hex strings)
EMAIL_ENCRYPT_SECRET="" # openssl rand -hex 32
EMAIL_ENCRYPT_SALT="" # openssl rand -hex 16

GOOGLE_PUBSUB_TOPIC_NAME="projects/abc/topics/xyz"
GOOGLE_PUBSUB_VERIFICATION_TOKEN= # Generate a random secret here: https://generate-secret.vercel.app/32

# Outlook
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_ENCRYPT_SECRET= # openssl rand -hex 32
MICROSOFT_ENCRYPT_SALT= # openssl rand -hex 16

# LLM providers (optional)
OPENROUTER_API_KEY=""
MISTRAL_API_KEY=""
